---
export interface Props {
    title: string;
}
const { title } = Astro.props;
import '../styles/global.scss';
---

<!DOCTYPE html>
<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width' />
        <meta
            name='description'
            content='Portfolio website for Anton Lovrić, a frontend developer from Croatia.'
        />
        <meta
            name='keywords'
            content='HTML, CSS, JavaScript, Laravel, Frontend, Backend, Fullstack, Croatia, Developer, Portfolio'
        />
        <meta name='author' content='Anton Lovrić' />
        <meta name='generator' content={Astro.generator} />
        <title>{title}</title>
    </head>
    <slot />
</html>
